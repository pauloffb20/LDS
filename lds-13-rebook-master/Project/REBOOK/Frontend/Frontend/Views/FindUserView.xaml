<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.Views.FindUserView">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Beige">
            
            <StackLayout Orientation="Horizontal" Margin="10" Padding="5">
                <SearchBar x:Name ="searchBar"
                           Placeholder="Search by username"
                           HorizontalOptions="Start" VerticalOptions="Center" BackgroundColor="White"/>
                <ImageButton x:Name= "Search" Clicked = "Search_OnClicked" CornerRadius="30" Source="findicon.png"
                             HeightRequest="40" WidthRequest="40" Aspect="AspectFit" 
                             BackgroundColor="Transparent"></ImageButton>
            </StackLayout>
            
            <Grid Margin="20" Padding="10">
                <Image Source="userfind.png" Aspect="AspectFill" Opacity="1" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
            </Grid>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>